<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageButton
        android:gravity="center"
        android:id="@+id/pauseButton"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/help"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:text="@string/canWeHelp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/scenario1"
        android:layout_below="@+id/help"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:text="@string/scenario1"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <Button
        android:id="@+id/scenario2"
        android:layout_below="@+id/scenario1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:text="@string/scenario2"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <Button
        android:id="@+id/scenario3"
        android:layout_below="@+id/scenario2"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:text="@string/scenario3"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <Button
        android:id="@+id/done"
        android:layout_below="@+id/scenario3"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:text="@string/done_button"
        android:textAllCaps="false"
        android:textSize="30sp" />

</RelativeLayout>