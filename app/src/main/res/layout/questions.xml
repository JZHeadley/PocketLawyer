<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight = "true"
        android:id="@+id/pauseButton"
        android:src="@drawable/ic_pause_2x"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight = "true"
        android:id="@+id/micButton"
        android:gravity="center"
        />

    </LinearLayout>


    <TextView
        android:id="@+id/help"
        android:text="@string/canWeHelp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/scenario1"
        android:text="@string/scenario1"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_below="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/scenario2"
        android:text="@string/scenario2"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_below="@+id/scenario1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/scenario3"
        android:text="@string/scenario3"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_below="@+id/scenario2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/scenario4"
        android:text="@string/scenario4"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_below="@+id/scenario3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/done"
        android:text="@string/done_button"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_below="@+id/scenario4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

</RelativeLayout>