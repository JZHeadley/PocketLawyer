<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jzheadley.pocketlawyer.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:text="@string/nowRecording"
        android:textColor="@color/off_white"
        android:textSize="32sp" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/wavegif"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="-30dp"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/wave5" />

    <Button
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/wavegif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-130dp"
        android:background="@drawable/mic5" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/black"
        android:text="@string/next_button"
        android:textColor="@color/off_white" />


</RelativeLayout>
